root = true

[*.*]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false
insert_final_newline = true

[Makefile]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8

[*.sh]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8

[*.yml]
indent_size = 2

[*.toml]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[*.j2]
indent_size = 2